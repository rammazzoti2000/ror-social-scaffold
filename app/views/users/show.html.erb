<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
  <%= render 'users/pending'%>
  <div class="btn btn-secondary">
    <%= friendship_button_show(@user) %>
  </div>
</section>
